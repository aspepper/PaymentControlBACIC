extends layout

block primary

    div(class="row mt-3")

        div(class="col-6 text-start p-1 text-dark")
            h4 Login

        div(class="col-4 text-end p-1 text-dark")
            p Notificações

        div(class="col-1 text-center")
            i(class="fa-regular fa-bell")

        div(class="col-1 text-start")
            i(class="fa-regular fa-user")

    form(action="." method="POST")

    div(class="row mt-3")

        div(class="col-4 text-end p-1 text-dark")
            label(for="UserName" class="form-label") Usuário:

        div(class="col-8 text-start p-1 text-dark")
            input(type="text"
                  id="username"
                  name="username"
                  class="form-control"
            )

    div(class="row mt-3")

        div(class="col-4 text-end p-1 text-dark")
            label(for="Password" class="form-label") Senha:

        div(class="col-8 text-start p-1 text-dark")
            input(type="pasword"
                  id="password"
                  name="password"
                  password="true"
                  class="form-control" 
            )

    div(class="row mt-3")

        div(class="col-4 text-end p-1 text-dark")
            p &nbsp;
        div(class="col-4 text-end p-1 text-dark")
            input(type="submit" class="btn btn-primary" value="Logar")